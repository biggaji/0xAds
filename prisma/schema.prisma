generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaigns {
  id String @id @default(uuid())
  active Boolean @default(false)
  dailyBudget Int
  currency Currency
  frequency Frequency
  objective CampaignObjective
  oxerId String
  startDate String
  endDate String
  adsCopy AdCopies?
  targetDelivery AdTargetDeliveries?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdCopies {
  id String @id @default(uuid())
  mediaLink String
  type AdCopyType
  websiteUrl String?
  text String @db.VarChar(280)
  campaign Campaigns @relation(fields: [campaignId], references: [id])
  campaignId String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdTargetDeliveries {
  id String @id @default(uuid())
  gender GenderGroup
  ageGroup AgeGroup
  maxAge Int?
  minAge Int?
  interests Interests[]
  languages Languages[]
  os Os[]
  campaign Campaigns @relation(fields: [campaignId], references: [id])
  campaignId String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Languages {
  ENGLISH
  YORUBA
  SPANISH
}

enum Interests {
  POLITICS
  MUSIC
  TECH
  CELEBRITIES
  NEW
  BUSINESS
  ARTS
}

enum Os {
  ANDRIOD
  IOS
  DESKTOP
  MOBILE
  ALL
}

enum AdCopyType {
  PHOTO
  VIDEO
}

enum GenderGroup {
  MALE
  FEMALE
  ANY
}

enum CampaignObjective {
  REACH
  ENGAGEMENT
  WEBSITE_TRAFFIC
  APP_INSTALL
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
}

enum Currency {
  NGN
  PRSH
}

enum AgeGroup {
  ALL
  SELECT_AGE
}